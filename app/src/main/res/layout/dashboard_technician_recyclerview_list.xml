<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_TechnicianList_FirstLetter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="@id/textView_TechnicianList_TechName"
        app:layout_constraintBottom_toBottomOf="@id/textView_TechnicianList_TechJobProfile"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/textView_TechnicianList_TechName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="gitesh"
        app:layout_constraintStart_toEndOf="@id/imageView_TechnicianList_FirstLetter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_TechnicianList_TechEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="gitesh@g.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_TechnicianList_FirstLetter"
        app:layout_constraintTop_toBottomOf="@id/textView_TechnicianList_TechName" />

    <TextView
        android:id="@+id/textView_TechnicianList_TechPhoneNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="123456789"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_TechnicianList_FirstLetter"
        app:layout_constraintTop_toBottomOf="@id/textView_TechnicianList_TechEmail" />

    <TextView
        android:id="@+id/textView_TechnicianList_TechJobProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="Pumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_TechnicianList_FirstLetter"
        app:layout_constraintTop_toBottomOf="@id/textView_TechnicianList_TechPhoneNo" />
</android.support.constraint.ConstraintLayout>