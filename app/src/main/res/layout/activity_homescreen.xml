<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_drawer_drawerlayout"
    tools:showIn="navigation_view"
    tools:context=".homescreen.view.HomescreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_Logout_HomeScreenPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="@string/homescreenpage_logout_button" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_homescreen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_drawer_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        >

    </android.support.design.widget.NavigationView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/toolbar_framelayout">
        
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:background="#fdbb14">

        </android.support.v7.widget.Toolbar>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>