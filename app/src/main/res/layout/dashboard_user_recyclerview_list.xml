<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/imageView_userList_firstLetter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_userList_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#262626"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:hint="Gitesh"
        app:layout_constraintLeft_toRightOf="@id/imageView_userList_firstLetter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_userList_lastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Gaonkar"
        android:textColor="#262626"
        app:layout_constraintLeft_toRightOf="@id/textView_userList_firstName"
        app:layout_constraintTop_toTopOf="parent" />

    <!--app:layout_constraintLeft_toRightOf="@id/textView_userList_firstName"-->

    <TextView
        android:id="@+id/textView_userList_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:hint="gitesh@gmail.com"
        android:textColor="#262626"
        app:layout_constraintLeft_toRightOf="@id/imageView_userList_firstLetter"
        app:layout_constraintTop_toBottomOf="@id/textView_userList_firstName" />

    <TextView
        android:id="@+id/textView_userList_roomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:hint="101"
        android:textColor="#262626"
        app:layout_constraintStart_toEndOf="@id/imageView_userList_firstLetter"
        app:layout_constraintTop_toBottomOf="@id/textView_userList_email" />


</android.support.constraint.ConstraintLayout>