<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_userList_firstLetter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textView_userList_firstName"
        app:layout_constraintTop_toTopOf="@id/textView_userList_firstName"

        />

    <TextView
        android:id="@+id/textView_userList_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="GItesh "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/imageView_userList_firstLetter" />

    <TextView
        android:id="@+id/textView_userList_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Gaonkar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView_userList_firstName"

        />

    <TextView
        android:id="@+id/textView_userList_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="gitesh@gmail.com"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/imageView_userList_firstLetter"
        app:layout_constraintTop_toBottomOf="@id/textView_userList_firstName" />

    <TextView
        android:id="@+id/textView_userList_roomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="101"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/imageView_userList_firstLetter"
        app:layout_constraintTop_toBottomOf="@id/textView_userList_email" />


</android.support.constraint.ConstraintLayout>